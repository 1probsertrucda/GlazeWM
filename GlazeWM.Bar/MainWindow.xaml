<Window
  x:Class="GlazeWM.Bar.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:local="clr-namespace:GlazeWM.Bar"
  xmlns:components="clr-namespace:GlazeWM.Bar.Components"
  mc:Ignorable="d"
  WindowStyle="None"
  ResizeMode="NoResize"
  Background="{Binding Background}"
  Title="GlazeWMBar"
  ShowInTaskbar="False"
  Width="800"
  Height="50"
  FontFamily="{Binding FontFamily}"
  FontSize="{Binding FontSize}"
  Opacity="{Binding Opacity}"
  AllowsTransparency="True"
  Topmost="True">
  <Border
    BorderThickness="{Binding BorderWidth}"
    BorderBrush="{Binding BorderColor}">
    <DockPanel Margin="{Binding Padding}">
      <components:ComponentContainer ComponentConfigs="{Binding ComponentsLeft}" />
      <components:ComponentContainer ComponentConfigs="{Binding ComponentsCenter}" />
      <components:ComponentContainer ComponentConfigs="{Binding ComponentsRight}" />
    </DockPanel>
  </Border>
</Window>
